        </member>
        <member name="M:VideoGameAPI10881.Controllers.VideogamesController.Post(VideoGameAPI10881.Model.Videogame)">
            <summary>
            Create a new item.
            </summary>
            <remarks>
            Sample request:
            
                POST api/Videogames
                {        
                  "name": "Hades",
                  "genre": "roguelike",
                  "price": "12",
                  "publisher" : "Supergiant Games"
                }
            </remarks>  
            <returns>Created video game.</returns>
            <response code="201">If returns created video game</response>
            <response code="400">If created video game is null</response>  
        </member>
        <member name="M:VideoGameAPI10881.Controllers.VideogamesController.Put(System.Int32,VideoGameAPI10881.Model.Videogame)">
            <summary>
            Update a selected item.
            </summary>
            <remarks>
            Sample request:
            
                PUT api/Videogames/{id}
                {  
                  "id" : {id}
                  "name": "Hades",
                  "genre": "roguelike",
                  "price": "12",
                  "publisher" : "Supergiant Games"
                }
            </remarks>   
            <returns>A newly updated video game.</returns>
            <response code="200">If requested video game was updated</response>
            <response code="400">If requested vidoe game was not updated</response>   
        </member>
